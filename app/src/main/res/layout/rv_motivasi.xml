<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/bg_motivasi"
        android:background="@drawable/bg_kotak"
        android:backgroundTint="@color/white"
        android:layout_marginStart="16dp"
        android:layout_width="match_parent"
        android:layout_height="119dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:text="Jangan biarkan ucapan orang lain menjatuhkan mimpimu. Bungkam mulut mereka dengan prestasimu"
        android:gravity="center_vertical"
        android:fontFamily="@font/poppins_regular"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="@id/bg_motivasi"
        app:layout_constraintEnd_toEndOf="@id/bg_motivasi"
        app:layout_constraintTop_toTopOf="@id/bg_motivasi"
        app:layout_constraintBottom_toBottomOf="@id/bg_motivasi"/>
</androidx.constraintlayout.widget.ConstraintLayout>